.container
	.row
		.page-header.clearfix


			
.navbar.navbar-default.navbar-fixed-top
	.container
		.navbar-header
			a.navbar-brand.public-title(href="/") IFILMS.TOP
				sup.version Beta 0.0.2
		.col-sm-8.header-search
			form(method="GET", action="/results")
				.input-group.col-sm-4.pull-right
					input.form-control(type="text", name="query")
					span.input-group-btn
						button.btn.btn-default.search-btn(type="submit") search
		if user
			p.navbar-text.navbar-right
				span 欢迎, #{user.name}
				span &nbsp; | &nbsp;
				a.navbar-link(href="/logout") 退出
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="/signup") 注册
				span &nbsp; | &nbsp;
				a.navbar-link(href="/signin") 登录

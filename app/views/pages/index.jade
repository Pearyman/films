extend ../layout

block content
  .container.main-container
    .row
      each cat in categories
        .panel.category
          .panel-heading
            h3 
              a.title(href="/results?category_id=#{cat._id}&page=0") #{cat.name}
          .panel-body
            if cat.movies && cat.movies.length > 0          
              each item in cat.movies
                .col-sm-3.movie-box
                  .thumbnail
                    a(href="/movie/#{item._id}")
                      if item.poster.indexOf('https:') > -1 || item.poster.indexOf('http:') > -1
                        div.img-container
                          img(src="#{item.poster}", alt="#{item.title}",width='185', height='277')
                      else
                        img(src="/upload/#{item.poster}", alt="#{item.title}",width='185', height='277')
                      .caption
                        h3 #{item.title}
                        a.play(href="/movie/#{item._id}", role="button") NOW PLAYING
                      

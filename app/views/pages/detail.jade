extends ../layout

block content
  .container.main-container
    .row
      .col-md-7
        video(src='#{movie.flash}' , allowFullScreen='true', quality='high', width='100%',height='100%',align='middle', controls="controls", autoplay="true")
        if flash_list.length > 1
          .panel.chapther
            .panel-heading
              h3 选集
            .panel-body
              each item,index in flash_list
                a.chapther-list(data-src='#{item}') #{index+1}
        .panel.discuss
          .panel-heading
            h3 评论区
          .panel-body
            ul.media-list
              if comments      
                each item in comments
                  li.media
                    .pull-left
                      a.comment(href="javascript:;", data-cid="#{item._id}", data-tid="#{item.from._id}" style="position:absolute; right: 50px;") 回复
                      img.media-object(src="http://ac-a5zjlnxg.clouddn.com/34d71b70e72441a241fa.png", style="width: 40px; height: 40px;")
                    .media-body
                      h4.media-heading #{item.from.name}
                      p #{item.content}
                      if item.reply && item.reply.length > 0
                        each reply in item.reply
                          .media
                            .pull-left
                              a.comment(href="javascript:;", data-cid="#{item._id}", data-tid="#{reply.from._id}" style="position:absolute; right: 50px; ") 回复
                              img.media-object(src="http://ac-a5zjlnxg.clouddn.com/34d71b70e72441a241fa.png", style="width: 40px; height: 40px;")
                            .media-body
                              h4.media-heading
                                | #{reply.from.name}
                                span.text-info &emsp; 回复 &emsp;
                                | #{reply.to.name}:
                              p #{reply.content}
                    hr

            // 为了设置一个锚点，点击头像就能评论
            #comments
              form#commentForm(method="POST", action="/user/comment")
                input(type="hidden", name="comment[movie]", value="#{movie._id}")
                if user
                  input(type="hidden", name="comment[from]", value="#{user._id}")
                  .form-group
                    textarea.form-control.focus-text(name="comment[content]", row="3")
                  button.btn.btn-primary.btn-submit(type='submit') 提交
                else
                  a.navbar-link(href="/signin") 登录后评论      
      .col-md-5
        dl.dl-horizontal
          dt 电影分类
          dd #{movie.name}
          dt 电影名字
          dd #{movie.title}
          dt 导演
          dd #{movie.director}
          dt 国家
          dd #{movie.country}
          dt 语言
          dd #{movie.language}
          dt 上映年份
          dd #{movie.year}
          dt 简介
          dd #{movie.summary}
  script(src="/js/detail.js")